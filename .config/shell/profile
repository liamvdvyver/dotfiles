# Defaults
export VISUAL=nvim
export EDITOR=$VISUAL
export BROWSER=qutebrowser
export PAGER='bat --theme=base16'
export TERMINAL=kitty
#export TERM=xterm-kitty
export PATH=~/git/scripts:~/.local/bin:~/.config/emacs/bin:/usr/local/stata17:~/.config/tmux/plugins/tmuxifier/bin:/usr/lib/rstudio:~/.ghcup/bin:~/.cabal/bin:~/git/dora/build:~/git/dora/scripts:$PATH

# Application config
export RANGER_LOAD_DEFAULT_RC=FALSE
export QT_QPA_PLATFORMTHEME=gtk2
export CALIBRE_USE_SYSTEM_THEME=1
export FZF_DEFAULT_COMMAND='fd -L -tf'
export TMUXIFIER_LAYOUT_PATH="$HOME/.config/tmux/plugins/tmuxifier-layouts/"

# Pfetch config
export PF_INFO="ascii os kernel uptime pkgs shell wm editor palette"
export PF_COL1=""
export PF_COL2=9
export PF_COL3=6
#export PF_ASCII="linux"

# XDG directories
export XDG_DATA_HOME=$HOME/.local/share
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_STATE_HOME=$HOME/.local/state

# GPG
export GNUPGHOME=$XDG_DATA_HOME/gnupg
export GPG_TTY=$(tty)
export SSH_AUTH_SOCK=$(gpgconf --list-dirs agent-ssh-socket)

# Clean up dotfiles
export PASSWORD_STORE_DIR=~/git/password-store
export BASH_COMPLETION_USER_FILE=/usr/share/bash-complete-alias/complete_alias
export LESSHISTFILE=-
export ZDOTDIR=$XDG_CONFIG_HOME/zsh
export XINITRC=$XDG_CONFIG_HOME/X11/xinitrc
export GTK2_RC_FILES=$XDG_CONFIG_HOME/gtk-2.0/gtkrc
export WINEPREFIX=$XDG_DATA_HOME/wineprefixes/default
export MBSYNCRC=$XDG_CONFIG_HOME/isync/mbsyncrc
export XAUTHORITY="$XDG_RUNTIME_DIR"/Xauthority
export CARGO_HOME="$XDG_CONFIG_HOME"/cargo
export DOT_SAGE="$XDG_CONFIG_HOME"/sage
export PYTHONSTARTUP="/etc/python/pythonrc"
export IPYTHONDIR="$XDG_CONFIG_HOME"/ipython
export GOPATH="$XDG_DATA_HOME"/go
export JUPYTER_CONFIG_DIR="$XDG_CONFIG_HOME"/jupyter
