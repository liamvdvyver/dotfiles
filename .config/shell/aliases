# basic commands
alias :q='exit'
alias q='exit'
alias x='startx'
alias gh='cd ~'

# colour
alias grep='grep --color=auto'
alias ls='ls --color=auto'
alias la='ls -A --color=auto'

# programs
alias S='sudo systemctl'
alias V='sudo nvim'
alias h='htop'
alias m='ncmpcpp'
alias nb='newsboat'
alias nf='neofetch'
alias nm='neomutt'
alias p='yay'
alias pc='pcmanfm'
alias pf='pfetch'
alias py='python'
alias p3='python3'
alias r='. ranger'
alias s='systemctl'
alias t='tmux'
alias v='nvim'
alias yt='ytfzf -t'

# git
alias g='git'
alias gv='nvim +:G +:on'

# yadm
alias y='yadm'
alias yv='yadm enter nvim +:G +:on'
alias ye='yadm enter zsh'
alias yei='yadm enter $EDITOR ~/.config/i3/config'
alias yeb='yadm enter $EDITOR ~/.bashrc'
alias yez='yadm enter $EDITOR ~/.config/shell/.zshrc'
alias yea='yadm enter $EDITOR ~/.config/shell/aliases'
alias yep='yadm enter $EDITOR ~/.config/shell/profile'
alias yex='yadm enter $EDITOR ~/.config/Xresources'
alias yev='yadm enter $EDITOR ~/.config/nvim/init.vim'
alias yek='yadm enter $EDITOR ~/.config/kitty/kitty.conf'

# rclone
alias rdd='rclone sync -i Drive: ~/drive'
alias rdu='rclone sync -i ~/drive Drive:'
alias rmd='rclone sync -i Mega: ~/mega'
alias rmu='rclone sync -i ~/mega Mega:'

# misc commands
alias cls='clear && source $ZDOTDIR/.zshrc && source ~/.config/shell/profile && xrdb ~/.config/Xresources 2>/dev/null'
alias pls='sudo $(history -p !!)'
alias pg='ps aux | grep'
alias ipp='curl https://ipinfo.io/ip && echo'
alias umm='sudo umount /media/media && sudo mount /media/media'
alias xr='xrdb .Xresources'
alias vr='nvim +:Ranger'
alias mpw='mpv --demuxer-lavf-o-set=input_format=mjpeg av://v4l2:/dev/video0'
alias f='xdg-open "$(fzf)"'
alias d='cd "$(fd . ~ -L -td | fzf)"'
alias grades='cd ~/drive/school/grades && Rscript grades.R'

# my scripts
alias wp='pape -i ~/drive/pictures/papes/'
alias mmd='find . -regex '\''.*\.\(flac\|mp3\|dsf\)'\'' -exec musmv {} \;'

# making things work
alias gcalcli='gcalcli --config-folder ~/.config/gcalcli'
