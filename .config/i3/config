# SYSTEM MODE -------------------------------------------------------------- {{{

# Set shut down, restart and locking features
bindsym Ctrl+Mod1+Delete mode "$mode_system"
set $mode_system (l)ock, (e)xit, (s)uspend, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock -c 000000, mode "default"
    bindsym s exec --no-startup-id i3lock -c 000000 && systemctl suspend, mode "default"
    bindsym e exec --no-startup-id i3 exit, mode "default"
    bindsym r exec --no-startup-id reboot, mode "default"
    bindsym Shift+s exec --no-startup-id shutdown now, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# }}}

# RICE MODE --------------------------------------------------------------- {{{

bindsym $mod+t mode "$mode_rice"
set $mode_rice colours: (l)ight | (d)ark | (t)oggle | picom: (o)n, o(f)f | switch to theme: (D)racula, (G)ruvbox, (N)ord, (S)olarized
mode "$mode_rice" {
    bindsym l exec --no-startup-id rice.sh --light, mode "default"
    bindsym d exec --no-startup-id rice.sh --dark, mode "default"
    bindsym t exec --no-startup-id rice.sh --toggle, mode "default"
    bindsym shift+d exec --no-startup-id rice.sh drac, mode "default"
    bindsym shift+g exec --no-startup-id rice.sh gruv, mode "default"
    bindsym shift+n exec --no-startup-id rice.sh nord, mode "default"
    bindsym shift+s exec --no-startup-id rice.sh solar, mode "default"
    bindsym o exec --no-startup-id picom --experimental-backends -c, mode "default"
    bindsym f exec --no-startup-id killall picom, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# }}}

