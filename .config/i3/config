# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id dmenu_run -nb "$(xrdb -query | grep '^\*barb:' | cut -f 2)" -nf "$(xrdb -query | grep '^\*bari:' | cut -f 2)" -sb "$(xrdb -query | grep '^\*barf2:' | cut -f 2)" -sf "$(xrdb -query | grep '^\*barf:' | cut -f 2)"
bindsym $mod+p exec --no-startup-id passmenu --type -nb "$(xrdb -query | grep '^\*barb:' | cut -f 2)" -nf "$(xrdb -query | grep '^\*bari:' | cut -f 2)" -sb "$(xrdb -query | grep '^\*barf2:' | cut -f 2)" -sf "$(xrdb -query | grep '^\*barf:' | cut -f 2)"
bindsym $mod+Shift+p exec --no-startup-id usermenu.sh --type -nb "$(xrdb -query | grep '^\*barb:' | cut -f 2)" -nf "$(xrdb -query | grep '^\*bari:' | cut -f 2)" -sb "$(xrdb -query | grep '^\*barf2:' | cut -f 2)" -sf "$(xrdb -query | grep '^\*barf:' | cut -f 2)"
# A more modern dmenu replacement is rofi:
